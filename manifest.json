{
  "manifest_version": 3,
  "name": "PomoFlow",
  "version": "1.0.0",
  "description": "PomoFlow - because every second of focus counts. Time your work, block distractions, and track your presence.",
  "action": {
    "default_popup": "popup.html"
  },
   "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "storage",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess",
    "activeTab",
    "tabs",
    "webNavigation",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": []
  },
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}